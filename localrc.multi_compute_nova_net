# compute with nova/cinder
# this localrc for compute

# base localrc
HOST_IP=w.x.y.z
MULTI_HOST=True

# Controller's IP
SERVICE_HOST=w.x.y.z
MYSQL_HOST=w.x.y.z

# network setting
FLAT_INTERFACE=eth0
FIXED_RANGE=10.0.10.0/24
FIXED_NETWORK_RANGE=256
FLOATING_RANGE=w.x.y.z/24

# password
DATABASE_PASSWORD=nosecret
RABBIT_PASSWORD=nosecret
SERVICE_TOKEN=nosecret
SERVICE_PASSWORD=nosecret
ADMIN_PASSWORD=nosecret
MYSQL_PASSWORD=nosecret

# system host
MYSQL_HOST=$SERVICE_HOST
RABBIT_HOST=$SERVICE_HOST
GLANCE_HOSTPORT=$SERVICE_HOST:9292
KEYSTONE_AUTH_HOST=$SERVICE_HOST
KEYSTONE_SERVICE_HOST=$SERVICE_HOST

# enabled service
# nova
ENABLED_SERVICES=n-cpu,n-api
# cinder
ENABLED_SERVICES+=,c-sch,c-api,c-vol
# Nova-network
ENABLED_SERVICES+=,n-net
# basic service
ENABLED_SERVICES+=,mysql,rabbit

# devstack destination
DEST=/opt/stack

# log setting
LOGFILE=$DEST/logs/stack.sh.log
SCREEN_LOGDIR=$DEST/logs/screen
SYSLOG=True
SYSLOG_HOST=$HOST_IP
SYSLOG_PORT=516

# vnc
VNCSERVER_LISTEN=0.0.0.0
VNCSERVER_PROXYCLIENT_ADDRESS=$HOST_IP

# cinder
VOLUME_GROUP="cinder-volume"
VOLUME_NAME_PREFIX="volume-"
